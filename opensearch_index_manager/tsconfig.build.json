{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": ".",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmitOnError": false
  },
  "include": ["common/**/*", "server/**/*", "config.ts"],
  "exclude": ["node_modules", "target", "**/*.d.ts"]
}
