{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "outDir": "./target",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "opensearch-crud-plugin/common/*": ["common/*"],
      "opensearch-crud-plugin/public/*": ["public/*"],
      "opensearch-crud-plugin/server/*": ["server/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "common/**/*.ts",
    "public/**/*.ts",
    "public/**/*.tsx",
    "server/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "target",
    "coverage",
    "tests"
  ]
}
